{%- comment -%}
  Premium Footer Section for Shopify Theme
{%- endcomment -%}

<footer class="footer">
  <div class="container">
    <div class="footer-inner">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text' -%}
              <div class="footer-block footer-block-text" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h2 class="footer-block-title">{{ block.settings.title }}</h2>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <div class="footer-text rte">{{ block.settings.text }}</div>
                {%- endif -%}
                
                {%- if block.settings.show_social -%}
                  <ul class="footer-social-icons">
                    {%- if settings.social_facebook_link != blank -%}
                      <li class="footer-social-item">
                        <a href="{{ settings.social_facebook_link }}" target="_blank" aria-label="Facebook">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                        </a>
                      </li>
                    {%- endif -%}
                    
                    {%- if settings.social_twitter_link != blank -%}
                      <li class="footer-social-item">
                        <a href="{{ settings.social_twitter_link }}" target="_blank" aria-label="Twitter">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                        </a>
                      </li>
                    {%- endif -%}
                    
                    {%- if settings.social_instagram_link != blank -%}
                      <li class="footer-social-item">
                        <a href="{{ settings.social_instagram_link }}" target="_blank" aria-label="Instagram">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                        </a>
                      </li>
                    {%- endif -%}
                    
                    {%- if settings.social_youtube_link != blank -%}
                      <li class="footer-social-item">
                        <a href="{{ settings.social_youtube_link }}" target="_blank" aria-label="YouTube">
                          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon></svg>
                        </a>
                      </li>
                    {%- endif -%}
                  </ul>
                {%- endif -%}
              </div>
            
            {%- when 'link_list' -%}
              <div class="footer-block footer-block-links" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h2 class="footer-block-title">{{ block.settings.title }}</h2>
                {%- endif -%}
                
                {%- assign footer_menu = block.settings.menu -%}
                {%- if footer_menu != blank -%}
                  <ul class="footer-links">
                    {%- for link in footer_menu.links -%}
                      <li class="footer-link">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            
            {%- when 'newsletter' -%}
              <div class="footer-block footer-block-newsletter" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h2 class="footer-block-title">{{ block.settings.title }}</h2>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <div class="footer-newsletter-text">{{ block.settings.text }}</div>
                {%- endif -%}
                
                {%- form 'customer', id: 'ContactFooter', class: 'footer-newsletter-form' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <input
                    type="email"
                    name="contact[email]"
                    id="NewsletterEmail"
                    class="footer-newsletter-input"
                    value="{{ form.email }}"
                    placeholder="{{ 'general.newsletter.email_placeholder' | t }}"
                    required
                  >
                  <button type="submit" class="footer-newsletter-submit" name="commit">
                    <span>{{ 'general.newsletter.submit' | t }}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </button>
                {%- endform -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      {%- endif -%}
    </div>
    
    <div class="footer-bottom">
      <div class="footer-copyright">
        <span>
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name | link_to: routes.root_url }}. 
          {{ 'general.footer.all_rights_reserved' | t }}
        </span>
      </div>
      
      {%- if section.settings.show_payment_icons -%}
        <div class="footer-payment-icons">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'payment-icon' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "About our store",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>",
          "label": "Text"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "Show social icons"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Quick links",
          "label": "Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Subscribe to our newsletter",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Be the first to know about new collections and exclusive offers.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "link_list"
        },
        {
          "type": "newsletter"
        }
      ]
    }
  ]
}
{% endschema %}
