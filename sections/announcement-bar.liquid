{%- comment -%}
  BunnyEra แถบประกาศ
  แสดงข้อมูลโปรโมชั่นร้านค้าและสโลแกนแบรนด์
{%- endcomment -%}

<div class="announcement-bar" data-section-id="{{ section.id }}" data-section-type="announcement-bar">
  {%- if section.settings.announcement_enable -%}
    <div class="announcement-bar__message">
      {%- if section.settings.announcement_link != blank -%}
        <a href="{{ section.settings.announcement_link }}" class="announcement-bar__link">
          {{ section.settings.announcement_text | escape }}
        </a>
      {%- else -%}
        <p class="announcement-bar__text">{{ section.settings.announcement_text | escape }}</p>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "แถบประกาศ",
  "settings": [
    {
      "type": "checkbox",
      "id": "announcement_enable",
      "label": "แสดงแถบประกาศ",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "ข้อความประกาศ",
      "default": "BunnyEra - โปรโมชั่นจำกัดเวลา | สินค้าใหม่"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "ลิงก์ประกาศ"
    }
  ]
}
{% endschema %}
